- matrix:
  - [$mpi_packages]
  - [$^{{compiler}}_old_mpi]
  {% if environment.gpu == 'nvidia' %}
  - [^{{environment.old.cuda.package }}]
  {% endif %}
  - [$%{{compiler}}_old_compiler]

- matrix:
  - [${{compiler}}_mpi_packages]
  - [$^{{compiler}}_old_blas]
  - [$^{{compiler}}_old_mpi]
  {% if environment.gpu == 'nvidia' %}
  - [^{{environment.old.cuda.package }}]
  {% endif %}
  - [$%{{compiler}}_old_compiler]

- matrix:
  - [$mpi_lapack_packages]
  - [$^{{compiler}}_old_blas]
  - [$^{{compiler}}_old_mpi]
  {% if environment.gpu == 'nvidia' %}
  - [^{{environment.old.cuda.package }}]
  {% endif %}
  - [$%{{compiler}}_old_compiler]

- matrix:
  - [${{compiler}}_mpi_lapack_packages]
  - [$^{{compiler}}_old_blas]
  - [$^{{compiler}}_old_mpi]
  {% if environment.gpu == 'nvidia' %}
  - [^{{environment.old.cuda.package }}]
  {% endif %}
  - [$%{{compiler}}_old_compiler]

- matrix:
  - [$mpi_lapack_python_packages]
  - [$^{{compiler}}_python3]
  - [$^{{compiler}}_old_blas]
  - [$^{{compiler}}_old_mpi]
  {% if environment.gpu == 'nvidia' %}
  - [^{{environment.old.cuda.package }}]
  {% endif %}
  - [$%{{compiler}}_old_compiler]

- matrix:
  - [${{compiler}}_mpi_lapack_python_packages]
  - [$^{{compiler}}_python3]
  - [$^{{compiler}}_old_blas]
  - [$^{{compiler}}_old_mpi]
  {% if environment.gpu == 'nvidia' %}
  - [^{{environment.old.cuda.package }}]
  {% endif %}
  - [$%{{compiler}}_old_compiler]

    {% endif %}
