{% if 'old' in environment.stack_types %}
  {% for compiler, stack in environment.old.items() %}
    {% if compiler in environment.compilers %}
- matrix:
  - [$serial_packages]
  - [$%{{compiler}}_old_compiler]

- matrix:
  - [$old_serial_packages]
  - [$%{{compiler}}_old_compiler]

- matrix:
  - [$serial_packages_lapack]
  - [$^{{compiler}}_old_blas]
  - [$%{{compiler}}_old_compiler]

#- matrix:
